{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["./src/domain/entities/*"],
      "@domain-ports/*": ["./src/domain/ports/*"],
      "@usecases/*": ["./src/domain/usecases/*"],
      "@controllers/*": ["./src/external/controllers/*"],
      "@utils/*": ["./src/external/utils/*"],  
      "@external/*":["./src/external/*"],
      "@config/*": ["./src/main/config/*"],
      "@mocks/*": ["./tests/mocks/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.spec.ts"
, "tests/mocks/operation-repository-mock.ts"  ],
  "exclude": [
    "node_modules"
  ]
}