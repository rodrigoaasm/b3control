{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/main/config/*"],
      "@utils/*": ["./src/external/utils/*"],
      "@entities/*": ["./src/domain/entities/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}