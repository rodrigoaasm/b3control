{
    "name": "b3control-api",
    "description": "B3Control-api is an API for an investment tracking system for the brazilian stock exchange.",
    "scripts": {
        "build": "node_modules/typescript/bin/tsc && tscpaths -p tsconfig.json -s ./src -o  ./dist",
        "start": "node ./dist/src/index.js",
        "dev": "nodemon ts-node-dev -r tsconfig-paths/register ./src/index.ts",
        "test": "jest --coverage",
        "test:unit": "jest ./tests/units --coverage",
        "test:integration": "jest ./tests/integration --runInBand"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.0",
        "@types/jest": "^27.0.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^14.14.10",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-typescript": "^14.0.0",
        "jest": "^27.1.0",
        "nodemon": "^2.0.4",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.8.1",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "tscpaths": "^0.0.9",
        "typescript": "^4.6.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "date-fns": "^2.23.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.37",
        "uuid": "^8.3.2",
        "dotenv": "^10.0.0"
    }
}
